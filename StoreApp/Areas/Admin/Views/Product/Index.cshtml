@model IEnumerable<Product>

    <div class="text-center">
        <div class="display-6">Ürünler</div>
        <div class="d-flex justify-content-end"><a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-plus"></i>Ürün Oluştur</a></div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                <th>ID</th>
                <th>Ürün Görseli</th>
                <th>Ürün İsmi</th>
               
                <th>Ürün Fiyatı</th>
                <th>İşlemler</th>
            </tr>
            </thead>
            <tbody>
                @foreach (Product item in Model)
            {
                <tr>
                    <td>@item.productId</td>
                    <td>
                        <img class="border border border-dark rounded" src="@item.imageUrl" alt="@item.productName" width="50" />
                    </td>
                    <td>@item.productName</td>
                   
                    <td>@item.productPrice TL</td>
                    <td>
                        <a class="btn btn-warning"  asp-action="Update" asp-route-id="@item.productId"><i class="fa-solid fa-file-pen"></i>Güncelle</a>
                        <a class="btn btn-danger" asp-area="Admin"  asp-action="Delete" asp-route-id="@item.productId"><i class="fa-regular fa-trash-can"></i>Sil</a>
                        <a class="btn btn-info" asp-area=""  asp-action="Get" asp-route-id="@item.productId"><i class="fa-solid fa-magnifying-glass"></i>Web Görüntüsü</a>
                    </td>
                    

                </tr>
            }
            </tbody>
        </table>
    </div>
